<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white"
    android:gravity="center_vertical">

    <!-- Icon representing the meal type with proper tint and background styling -->
    <ImageView
        android:id="@+id/mealIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_button"
        android:contentDescription="@string/meal_icon_description"
        android:scaleType="centerInside"
        app:backgroundTint="@color/cookie_beige"
        app:tint="@color/chocolate_brown"
        tools:ignore="ImageContrastCheck" />

    <!-- TextView displaying the name of the meal -->
    <TextView
        android:id="@+id/mealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/chocolate_brown"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_vertical" />
</LinearLayout>
