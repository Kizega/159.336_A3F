<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText for entering quantity to remove -->
    <EditText
        android:id="@+id/quantity_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/quantity_input_hint"
        android:inputType="number"
        android:autofillHints="quantity" />

    <!-- Button to remove specified quantity -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/remove_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remove_button_text"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/chocolate_brown" />

    <!-- Button to delete all quantities -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_all_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_all_button_text"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/chocolate_brown" />
</LinearLayout>
